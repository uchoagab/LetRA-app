<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_fundo_app"
    tools:context=".fragments.SettingsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="Configurações"
        app:titleTextColor="@color/cor_titulo"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NOVO SELETOR DE MODELO -->
    <TextView
        android:id="@+id/label_efficientdet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="EfficientDet\n(Rápido)"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/switch_model_selector"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_model_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_efficientdet"
        app:layout_constraintEnd_toStartOf="@+id/label_yolo"
        app:layout_constraintStart_toEndOf="@+id/label_efficientdet"
        app:layout_constraintTop_toTopOf="@+id/label_efficientdet" />

    <TextView
        android:id="@+id/label_yolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="YOLO\n(Preciso)"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_efficientdet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switch_model_selector"
        app:layout_constraintTop_toTopOf="@+id/label_efficientdet" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_efficientdet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_clear_dictionary"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:text="Apagar Dicionário"
        android:textColor="@android:color/holo_red_dark"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconTint="@android:color/holo_red_dark"
        app:strokeColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
