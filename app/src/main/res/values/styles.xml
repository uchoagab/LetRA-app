<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    TEMA BASE DA APLICAÇÃO (MODO CLARO)
    A linha 'parent' foi alterada para um tema Material3.
    Isto resolve o erro de "InflateException" com o MaterialCardView.
    -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Fonte -->
        <item name="android:fontFamily">@font/app_font_family</item>
        <!-- Personalize o seu tema aqui. -->
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryVariant">@color/toolbar_background</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Cores secundárias -->
        <item name="colorSecondary">@android:color/holo_blue_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_blue_light</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <!-- Icones brancos na barra de navegacao -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Previne Android 10+ de forçar mudanças de contraste -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Previne overrides de contraste do Android 10+ -->
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>

    </style>

    <!--
    Este é um tema alternativo que pode ser usado.
    Se o 'Theme.Material3' não funcionar por alguma razão,
    pode tentar usar 'Theme.MaterialComponents'.
    -->
    <style name="AppTheme.MaterialComponents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personalize o seu tema aqui. -->
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryVariant">@color/toolbar_background</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Cores secundárias -->
        <item name="colorSecondary">@android:color/holo_blue_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_blue_light</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Cor da barra de status -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!--
    ESTILO FALTANTE: Adicionado para corrigir o erro "failed linking file resources".
    Este estilo é usado pelos spinners na parte inferior da tela.
    -->
    <style name="BottomSheetSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
    </style>
</resources>